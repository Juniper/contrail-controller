Import('BuildEnv')
env = BuildEnv.Clone()

cli_setup_sources = [
                'setup.py',
                '../entry_points.py',
          ]

cli_setup_sources_rules = []
for file in cli_setup_sources:
    cli_setup_sources_rules.append(
        env.Install(Dir("."), '#controller/src/utils/contrail-cli/contrail_config_cli/' + file))

local_sources = [
                '__init__.py',
        ]

local_sources_rules = []
for file in local_sources:
    local_sources_rules.append(env.Install(Dir("contrailConfigCli"), file))

cli_sdist_depends = [cli_setup_sources_rules, local_sources_rules]

cd_cmd = 'cd ' + Dir('.').path + ' && '
cli_sdist_gen = env.Command('dist/contrail_config_cli-0.1dev.tar.gz',
                                'setup.py',
                                cd_cmd + 'python setup.py sdist')
# install everything before building distribution
env.Depends(cli_sdist_gen, cli_sdist_depends)

env.Default(cli_sdist_gen)
