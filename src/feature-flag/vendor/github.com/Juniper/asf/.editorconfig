# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[{Makefile.*,Makefile,GNUmakefile,makefile,*.mk}]
indent_style = tab

[{*.go,*.tmpl}]
indent_style = tab

[{*.yml,*.yaml}]
indent_size = 2
