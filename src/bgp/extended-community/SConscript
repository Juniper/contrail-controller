# -*- mode: python; -*-

Import('BuildEnv')

env = BuildEnv.Clone()
env.Append(CPPPATH = [ env['TOP'] ])
env.Append(CPPPATH = [ env['TOP'] + '/db'])
env.Append(CPPPATH = [ env['TOP'] + '/io'])
env.Append(CPPPATH = [env['TOP'] + '/tools/sandesh/library/common'])

libextended_community = env.Library('extended_community',
                                    ['default_gateway.cc',
                                     'es_import.cc',
                                     'esi_label.cc',
                                     'etree.cc',
                                     'load_balance.cc',
                                     'mac_mobility.cc',
                                     'router_mac.cc',
                                     'site_of_origin.cc',
                                     'vrf_route_import.cc',
                                     'source_as.cc',
                                     'sub_cluster.cc',
                                     'multicast_flags.cc',
                                     'tag.cc'])

extended_community_test_cases = env.SConscript('test/SConscript', exports='BuildEnv',
                                     duplicate = 0)
Return('extended_community_test_cases')
