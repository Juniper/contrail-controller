Import('BuildEnv')
import os
import sys

env = BuildEnv.Clone()

env.CppDisableExceptions()

env.Append(CPPPATH = [env['TOP'],
                      env['TOP'] + '/bgp',
                      env['TOP'] + '/db',
                      env['TOP'] + '/io',
                      env['TOP'] + '/tools/sandesh/library/common',
                      env['TOP'] + '/xmpp'
                     ])
env.Append(LIBPATH = ['#/' + Dir('..').path,
                      '../../base',
                      '../../bgp/inet',
                      '../../bgp/ermvpn',
                      '../../bgp/evpn',
                      '../../bgp/inet6',
                      '../../bgp/inet6vpn',
