# -*- mode: python; -*-

import sys
Import('AgentEnv')
env = AgentEnv.Clone()

SandeshGenFiles = env.SandeshGenCpp('agent.sandesh')
SandeshGenSrcs = env.ExtractCpp(SandeshGenFiles)
 
except_env = AgentEnv.Clone()
cflags = except_env['CCFLAGS']
if '-fno-exceptions' in cflags:
    cflags.remove('-fno-exceptions')
    except_env.Replace(CCFLAGS = cflags)

sandesh_objs = []
for src in SandeshGenSrcs:                    
    objname = src.replace('.cpp', '.o')
    obj = except_env.Object(objname, src)
    sandesh_objs.append(obj)

vnswoperdb = env.Library('vnswoperdb',
                         sandesh_objs +
                         ['agent_sandesh.cc',
                          'global_vrouter.cc',
                          'inet4_ucroute.cc',
                          'inet4_mcroute.cc',
                          'interface.cc',
                          'layer2_route.cc',
                          'mirror_table.cc',
                          'mpls.cc',
                          'multicast.cc',
                          'nexthop.cc',
                          'operdb_init.cc',
                          'peer.cc',
                          'route_common.cc', 
                          'sg.cc',
                          'vm.cc',
                          'vm_interface.cc',
                          'vn.cc',
                          'vrf.cc',
                          'vrf_assign.cc',
                          'vxlan.cc'
                         ])
subdirs = ['test']
for dir in subdirs:
    env.SConscript(dir + '/SConscript', exports='AgentEnv', duplicate=0)
