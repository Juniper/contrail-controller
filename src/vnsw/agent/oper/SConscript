# -*- mode: python; -*-

import sys
Import('AgentEnv')
env = AgentEnv.Clone()

except_env = env.Clone()
cflags = except_env['CCFLAGS']
if '-fno-exceptions' in cflags:
   cflags.remove('-fno-exceptions')
except_env.Replace(CCFLAGS=cflags)

SandeshGenFiles = env.SandeshGenCpp('agent.sandesh')
SandeshGenSrcs = env.ExtractCpp(SandeshGenFiles)
sandesh_objs = AgentEnv.BuildExceptionCppObj(env, SandeshGenSrcs)

vnswoperdb = env.Library('vnswoperdb',
                         sandesh_objs +
                         ['agent_sandesh.cc',
                          'agent_path.cc',
                          'agent_route.cc',
                          'agent_route_encap.cc',
                          'agent_route_walker.cc',
                          'global_vrouter.cc',
                          'ifmap_dependency_manager.cc',
                          'inet_interface.cc',
                          'inet4_multicast_route.cc',
                          'inet4_unicast_route.cc',
                          'interface.cc',
                          'layer2_route.cc',
			  'loadbalancer.cc',
			  'loadbalancer_haproxy.cc',
			  'loadbalancer_properties.cc',
                          'mirror_table.cc',
                          'mpls.cc',
                          'multicast.cc',
                          except_env.Object('namespace_manager.cc'),
                          'nexthop.cc',
                          'operdb_init.cc',
                          'path_preference.cc',
                          'peer.cc',
                          'service_instance.cc',
                          'sg.cc',
                          'vm.cc',
                          'vm_interface.cc',
                          'vn.cc',
                          'vrf.cc',
                          'vrf_assign.cc',
                          'vxlan.cc'
                         ])
subdirs = ['test']
for dir in subdirs:
    env.SConscript(dir + '/SConscript', exports='AgentEnv', duplicate=0)
