# -*- mode: python; -*-

import sys
Import('AgentEnv')
env = AgentEnv.Clone()

SandeshGenFiles = env.SandeshGenCpp('agent.sandesh')
SandeshGenSrcs = env.ExtractCpp(SandeshGenFiles)
sandesh_objs = AgentEnv.BuildExceptionCppObj(env, SandeshGenSrcs)

vnswoperdb = env.Library('vnswoperdb',
                         sandesh_objs +
                         ['agent_sandesh.cc',
                          'agent_path.cc',
                          'agent_route.cc',
                          'agent_route_encap.cc',
                          'agent_route_walker.cc',
                          'global_vrouter.cc',
                          'inet_interface.cc',
                          'inet4_multicast_route.cc',
                          'inet4_unicast_route.cc',
                          'interface.cc',
                          'layer2_route.cc',
                          'mirror_table.cc',
                          'mpls.cc',
                          'multicast.cc',
                          'nexthop.cc',
                          'operdb_init.cc',
                          'path_preference.cc',
                          'peer.cc',
                          'sg.cc',
                          'vm.cc',
                          'vm_interface.cc',
                          'vn.cc',
                          'vrf.cc',
                          'vrf_assign.cc',
                          'vxlan.cc'
                         ])
subdirs = ['test']
for dir in subdirs:
    env.SConscript(dir + '/SConscript', exports='AgentEnv', duplicate=0)
