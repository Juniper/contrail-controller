{
  "input_schema": {
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "Migrate fabric input",
    "type": "object",
    "required": [
      "remote_server_access_info"
    ],
    "properties": {
      "remote_server_access_info": {
        "title": "Remote Contrail Info",
        "type": "object",
        "description": "Details required for accessing the remote contrail api server",
        "required": [
          "admin_user_name",
          "admin_password",
          "admin_tenant_name",
          "api_server_port",
          "api_server_ip_list"
        ],
        "properties": {
          "admin_user_name": {
            "type": "string"
          },
          "admin_password": {
            "type": "string"
          },
          "admin_tenant_name": {
            "type": "string"
          },
          "api_server_port": {
            "type": "string"
          },
          "api_server_use_ssl": {
            "type": "boolean",
            "default": true
          },
          "api_server_ip_list": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "output_schema": {
      "$schema": "http://json-schema.org/draft-06/schema#",
      "title": "Generic Job Output",
      "type": "object",
      "properties": {
        "status": {
          "type": "string",
          "enum": [
            "Success",
            "Failure",
            "Timeout"
          ],
          "description": "Result status of the job"
        },
        "message": {
          "type": "string",
          "description": "Should capture a summarized error message in case of Failures."
        },
        "results": {
          "type": "object",
          "description": "JSON object holding the job specific output details"
        }
      },
      "required": [
        "status"
      ]
    }
  }
}