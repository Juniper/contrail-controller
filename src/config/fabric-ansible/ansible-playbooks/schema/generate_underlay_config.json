{
   "input_schema":{
      "$id":"http://example.com/example.json",
      "type":"object",
      "properties":{
         "ntp":{
            "$id":"/properties/ntp",
            "type":"object",
            "properties":{
               "ntp_boot_servers":{
                  "$id":"/properties/ntp/properties/ntp_boot_servers",
                  "type":"array",
                  "items":{
                     "$id":"/properties/ntp/properties/ntp_boot_servers/items",
                     "type":"string",
                     "title":"NTP Boot server",
                     "default":"",
                     "examples":[
                        "6.6.6.6"
                     ]
                  }
               },
               "ntp_servers":{
                  "$id":"/properties/ntp/properties/ntp_servers",
                  "type":"array",
                  "items":{
                     "$id":"/properties/ntp_servers/items",
                     "type":"string",
                     "title":"NTP server",
                     "default":"",
                     "examples":[
                        "8.8.8.8"
                     ]
                  }
               },
               "time_zone":{
                  "$id":"/properties/ntp/properties/time_zone",
                  "type":"string",
                  "title":"Time Zone",
                  "default":"",
                  "examples":[
                     "America/Los_Angeles"
                  ]
               }
            }
         },
         "snmp":{
            "$id":"/properties/snmp",
            "type":"object",
            "properties":{
               "snmp_location":{
                  "$id":"/properties/snmp/properties/snmp_location",
                  "type":"string",
                  "title":"SNMP Location",
                  "default":"",
                  "examples":[
                     "A.6.221"
                  ]
               },
               "snmp_contact":{
                  "$id":"/properties/snmp/properties/snmp_contact",
                  "type":"string",
                  "title":"SNMP Contact",
                  "default":"",
                  "examples":[
                     "aakashr"
                  ]
               },
               "snmp_communities":{
                  "$id":"/properties/snmp/properties/snmp_communities",
                  "type":"array",
                  "items":{
                     "$id":"/properties/snmp/properties/snmp_communities/items",
                     "type":"string",
                     "title":"SNMP Community",
                     "examples":[
                        "community_A",
                        "community_B"
                     ]
                  }
               }
            }
         },
         "static_routes":{
            "$id":"/properties/static_routes",
            "type":"array",
            "items":{
               "$id":"/properties/static_routes/items",
               "type":"object",
               "properties":{
                  "subnets":{
                     "$id":"/properties/static_routes/items/subnets",
                     "type":"array",
                     "items":{
                        "$id":"/properties/static_routes/items/subnets/items",
                        "type":"string",
                        "title":"Subnet",
                        "examples":[
                           "10.1.1.0/24",
                           "10.1.2.0/24"
                        ]
                     }
                  },
                  "nexthop":{
                     "$id":"/properties/static_routes/items/nexthop",
                     "type":"string",
                     "title":"Next hop IP",
                     "examples":[
                        "10.1.1.254"
                     ]
                  }
               }
            }
         }
      }
   },
   "output_schema":{
      "$schema":"http://json-schema.org/draft-06/schema#",
      "title":"Generic Job Output",
      "type":"object",
      "properties":{
         "status":{
            "type":"string",
            "enum":[
               "Success",
               "Failure",
               "Timeout"
            ],
            "description":"Result status of the job"
         },
         "message":{
            "type":"string",
            "description":"Should capture a summarized error message in case of Failures."
         },
         "results":{
            "type":"object",
            "description":"JSON object holding the job specific output details"
         }
      },
      "required":[
         "status"
      ]
   }
}
