{
   "input_schema":{
       "$schema":"http://json-schema.org/draft-06/schema#",
       "maxProperties":1,
       "additionalProperties":false,
       "properties":{
           "device_info":{
               "$id": "/properties/device_info",
               "type": "object",
               "description": "JSON object holding the appropriate info obtained from the device"
           }
       }

   },
   "output_schema":{
      "$schema":"http://json-schema.org/draft-06/schema#",
      "title":"Generic Topology Discovery Parser Output",
      "type":"object",
      "properties":{
         "neighbor_info_list":{
            "$id": "/properties/neighbor_info_list",
            "type":"array",
            "description":"List of physical interfaces (and other information) to be created or updated by vnc",
            "items": {
                "type": "object",
                "properties": {
                    "local_physical_interface_name": {
                        "type": "string",
                        "description": "physical interface name of the local device",
                        "examples": ["xe-0/0/0", "ge-0/0/35"]
                    },
                    "remote_device_name": {
                        "type": "string",
                        "description": "Remote system name",
                        "examples": ["5b5-qfx11"]
                    },
                    "remote_physical_interface_name": {
                        "type": "string",
                        "description": "name or port id (stringified number) of the remote physical interface",
                        "examples": ["ge-0/2/3", "538"]
                    }
                },
                "required": [
                    "local_physical_interface_name",
                    "remote_device_name",
                    "remote_physical_interface_name"
                ]
            }
         },
         "do_more_parsing":{
            "$id": "/properties/do_more_parsing",
            "type": "boolean",
            "description": "Set this to true in cases, where we have the remote port-id and need to obtain the interface name corresponding to the port-id"
         }
      },
      "required":[
         "neighbor_info_list"
      ]
   }
}

